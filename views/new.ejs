			<div class="navbar-inner">
				<div class="container">
					<a class="brand" href="index.html">Matthew Borden</a>
				</div>
			</div>
		</div>

		<div class="container">	
			<div class="row">
				<div class="span12">
					<h2 class="title"> <%= name %></h2>
					<!-- Button to trigger modal -->
					<a href="#myModal" role="button" class="btn new" data-toggle="modal">New Question</a>
 
					<!-- Modal -->
					<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
					  <div class="modal-header">
					    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
					    <h3 id="myModalLabel">New Question</h3>
					  </div>
					  <div class="modal-body">
						<form>
						  <fieldset>
						    <input type="text" class="input long" placeholder="Question">
						    <label class="radio">
						      <input type="radio" > Multiple Choice
						    </label>
						    <label class="radio">
						      <input type="radio"> Comments
						    </label>
						  </fieldset>
						</form>
					  </div>
					  <div class="modal-footer">
					    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
					    <button class="btn btn-primary">Save</button>
					  </div>
					</div>
					
				</div>
			</div>
			<div class = "row">
				<% for(i = 0; i < answers.length; i++){ %>
					<div class="span12">
						<a href=""><span><%= answers[i].name %></span></a>
					</div>
				<% } %>
			</div>
<script src="/javascripts/jquery.js" type="text/javascript"></script>
